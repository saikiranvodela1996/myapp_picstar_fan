        <item name="Auth0.HeaderTitle">@string/autho_header_title</item>
        <item name="Auth0.PrimaryColor">@color/button_color</item>
       <!-- <item name="Auth0.HeaderTitleColor">@color/button_color</item>
        <item name="Auth0.DarkPrimaryColor">@color/button_color</item>
        <item name="Auth0.BackgroundColor">@color/button_color</item>-->
        <item name="android:textColor">@color/button_color</item>



    </style>

